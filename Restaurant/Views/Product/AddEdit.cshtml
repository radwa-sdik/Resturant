@model Product 
@{
    string operation = ViewBag.Operation;

    ViewBag.Title = $"{operation} Menu Item";
}
<h1>@ViewBag.Operation Menu Item</h1>
<form asp-action="AddEdit" method="post" enctype="multipart/form-data">
    @if (Model?.ProductId > 0)
    {
        <input type="hidden" asp-for="ProductId" />
        <input type="hidden" asp-for="ImageUrl" />
    }
    

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Stock" class="control-label"></label>
        <input asp-for="Stock" class="form-control" />
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImageFile" class="control-label">Upload Image</label>
        <input asp-for="ImageFile" type="file" accept="image/*" class="form-control" />
    </div>
    <div class="row">
        <div class="col form-group">
            <label>Category</label>
            @foreach(Category category in ViewBag.Categories)
            {
                <div class="form-check">                                                
                    <label>
                        <input type="radio" asp-for="CategoryId" value="@category.CategoryId" />
                        @category.Name
                    </label>
                </div>
            }
        </div>
        <div class="col form-group">
            <label>Ingredients</label>

            @foreach (Ingredient ingredient in ViewBag.Ingredients)
            {
                <div class="form-check ms-4">
                    @{
                        bool isChecked = Model != null && Model.ProductIngredients != null && Model.ProductIngredients.Any(i => i.IngredientId == ingredient.IngredientId);
                    }
                    <input type="checkbox" class="form-check-input" id="@ingredient.IngredientId" name="IngredientIds" value="@ingredient.IngredientId"
                    @(isChecked ? "checked" : "") />
                    <label class="form-check-label" for="@ingredient.IngredientId">@ingredient.Name</label>
                </div>
            }
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" asp-controller="Product" class="btn btn-outline-dark">Cancel</a>
</form>